<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_principal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imagen_logo"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/jin"
                app:layout_constraintEnd_toStartOf="@+id/text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/logo_principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text=" LOGO "
                android:textColor="#6E6E6E"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/imagen_inicio"
                app:layout_constraintStart_toEndOf="@id/imagen_logo"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imagen_inicio"
                android:layout_width="245dp"
                android:layout_height="168dp"
                android:src="@drawable/nnn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioButton
                android:id="@+id/radioButton_remember_me"
                android:layout_width="155dp"
                android:layout_height="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="28dp"
                android:text="Remember me"
                android:textColor="#6E6E6E"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/button_signup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/button_signup"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="32dp"
                android:background="#039BE6"
                android:onClick="onClick"
                android:text="SIGNUP"
                android:textColor="#FDFEFE"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.694"
                app:layout_constraintStart_toEndOf="@id/radioButton_remember_me"
                app:layout_constraintTop_toBottomOf="@id/cardView" />

            <TextView
                android:id="@+id/social_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:text="Social Login"
                android:textColor="#6E6E6E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_signup" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:src="@drawable/separator"
                app:layout_constraintBottom_toTopOf="@id/imageView_facebook"
                app:layout_constraintEnd_toStartOf="@id/social_login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioButton_remember_me" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:src="@drawable/separator"
                app:layout_constraintBottom_toTopOf="@id/imageView_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/social_login"
                app:layout_constraintTop_toBottomOf="@id/button_signup" />

            <ImageView
                android:id="@+id/imageView_facebook"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/facebbok"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton_remember_me" />

            <ImageView
                android:id="@+id/imageView_google"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/google"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_facebook"
                app:layout_constraintTop_toBottomOf="@+id/button_signup" />

            <ImageView
                android:id="@+id/imageView_twitter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/twitter"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_in"
                app:layout_constraintEnd_toStartOf="@id/imageView_in"
                app:layout_constraintStart_toEndOf="@+id/imageView_google"
                app:layout_constraintTop_toTopOf="@id/imageView_google" />

            <ImageView
                android:id="@+id/imageView_in"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/in"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_google"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_twitter"
                app:layout_constraintTop_toTopOf="@+id/imageView_twitter" />

            <TextView
                android:id="@+id/textView_signup_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="50dp"
                android:text="Signup?"
                android:textColor="#039BE6"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_facebook" />

            <TextView
                android:id="@+id/textView_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New user?"
                android:textColor="#6E6E6E"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.041"
                app:layout_constraintStart_toEndOf="@+id/textView_signup_question"
                app:layout_constraintTop_toBottomOf="@+id/imageView_google"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toTopOf="@id/button_signup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagen_inicio">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="#ffffff"
                    app:layout_constraintBottom_toTopOf="@id/button_signup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imagen_inicio">

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="102dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="16dp"
                        android:text=" LOGIN "
                        android:textColor="#6E6E6E"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.063"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="96dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="16dp"
                        android:text="Username"
                        android:textColor="#6E6E6E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.068"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/login" />

                    <EditText
                        android:id="@+id/edit_text_username"
                        android:layout_width="284dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="52dp"
                        android:layout_marginRight="10dp"
                        android:hint="Username"
                        android:textColor="#6E6E6E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/username"
                        app:layout_constraintTop_toBottomOf="@+id/username" />


                    <TextView
                        android:id="@+id/Password"
                        android:layout_width="96dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="20dp"
                        android:text="Password:"
                        android:textColor="#6E6E6E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.074"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_username" />


                    <EditText
                        android:id="@+id/edit_text_password"
                        android:layout_width="289dp"
                        android:layout_height="51dp"
                        android:layout_marginEnd="68dp"
                        android:layout_marginRight="68dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#6E6E6E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.317"
                        app:layout_constraintStart_toStartOf="@+id/Password"
                        app:layout_constraintTop_toBottomOf="@+id/Password" />


                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="44dp"
                        android:layout_marginRight="44dp"
                        android:text="Forgot password"
                        android:textColor="#039BE6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_password" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
