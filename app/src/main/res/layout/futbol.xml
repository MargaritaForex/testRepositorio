<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C5F7F9">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gudeline1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
       android:id="@+id/gudeline2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"/>

    <TextView
        android:id="@+id/salon_del_gol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Salon del Gol"
        android:textColor="#0C054D"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagen_futbol"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/futbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salon_del_gol" />

    <Button
        android:id="@+id/futbol_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/boton_welcome"
        android:text="Return"
        android:textColor="#0C054D"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/gudeline2"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@id/gudeline1"
        app:layout_constraintTop_toBottomOf="@id/imagen_futbol" />

    <ImageView
        android:id="@+id/guayos_imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/guayos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gudeline1"
        app:layout_constraintTop_toBottomOf="@id/futbol_return"/>

    <ImageView
        android:id="@+id/balon_imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/balon"
        app:layout_constraintEnd_toEndOf="@id/gudeline2"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@id/gudeline1"
        app:layout_constraintTop_toBottomOf="@id/futbol_return" />

    <ImageView
        android:id="@+id/guantes_imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/guantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gudeline2"
        app:layout_constraintTop_toBottomOf="@id/futbol_return" />
</androidx.constraintlayout.widget.ConstraintLayout>